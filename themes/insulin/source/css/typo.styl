.typo {
  line-height: 1.5;
  word-wrap: break-word;

  /* small */
  small {
    font-size: 80%;
  }

  /* mark */
  mark {
    margin: 0 5px;
    padding: 2px;
    background: #fffdd1;
    border-bottom: 1px solid #ffedce;
  }

  /* h1 - h6 */
  h1, h2, h3, h4, h5, h6 {
    margin-top: 1.2em;
    margin-bottom: 0.6em;
    color: inherit;
    font-weight: 400;
    font-family: inherit;
    line-height: 1.35;

    &:last-child {
      margin-bottom: 0;
    }

    small {
      color: @color-black-secondary;
      font-weight: 400;
      font-size: 65%;
      line-height: 1;
    }
  }
  
  h1 {
    font-size: 1.75em;
  }
  h2 {
    font-size: 1.5em;
  }
  h3 {
    font-size: 1.2em;
  }
  h4 {
    font-size: 1em;
  }
  h5 {
    font-size: 0.85em;
  }
  h6 {
    font-size: 0.65em;
  }
}
