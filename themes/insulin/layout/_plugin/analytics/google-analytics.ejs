<script async src="https://www.googletagmanager.com/gtag/js?id=<%= theme.analytics.google_analytics.tracking_id %>"></script>
<script>
  var host = window.location.hostname;
  if (host != "localhost" || <%= theme.analytics.google_analytics.localhost_ignored%> == false) {
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', '<%= theme.analytics.google_analytics.tracking_id %>');
  }
</script>