<% if (page.comments && theme.comment.use) { %>
    <v-card class="comment-card elevation-2">
        <v-tabs v-model="commentTab"  id="comment-tabs" active-class="active-comment-tab">
            <% for(element in theme.comment.use) { %>
                <v-tab><span id="comment-tab-<%=element%>"><%=theme.comment.use[element]%></span></v-tab>
            <% } %>
        </v-tabs>
        <v-tabs-items v-model="commentTab" id="tabs-content" data=<%= new Buffer(JSON.stringify(theme.comment)).toString('base64') %> >
            <% for(element in theme.comment.use) { %>
                <v-tab-item eager=true>
                    <%if(theme.comment.use[element]=='changyan'){%>
                        <div id="SOHUCS"<% if (theme.comment.changyan_sid_type) { %> sid="<%= page[theme.comment.changyan_sid_type] %>"<% } %>></div>
                    <%}else if(theme.comment.use[element]=='disqus'){%>
                        <div id="disqus_thread"></div>
                    <%}else if(theme.comment.use[element]=='gitalk'){%>
                        <div id="gitalk-container"></div>
                    <%}else if(theme.comment.use[element]=='livere'){%>
                        <div id="lv-container" data-id="city" data-uid="<%= theme.comment.livere_data_uid %>"></div>
                    <%}else if(theme.comment.use[element]=='valine'){%>
                        <div id="vcomments"></div>
                    <%}%>
                </v-tab-item>
            <% } %>
        </v-tabs-items>
    </v-card>
<% } %>