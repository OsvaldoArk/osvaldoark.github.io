<%# JS %>
<script src="https://cdn.jsdelivr.net/npm/vue@2.6.11"></script>
<script src="https://cdn.jsdelivr.net/npm/vuetify@2.2.30"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/js-base64@3.5.2/base64.min.js"></script>
<%- js("/js/main.js") %>

<%# 不蒜子计数 %>
<%if (theme.busuanzi.site || theme.busuanzi.page){%>
    <script async src="<%- theme.busuanzi.busuanzi_js %>"></script>
<%}%>

<%# Mermaid %>
<% if (theme.mermaid.enable && is_post()) { %>
    <script src="https://cdn.jsdelivr.net/npm/mermaid@<%= theme.mermaid.version %>/dist/mermaid.min.js"></script>
    <script>mermaid.initialize({
        startOnLoad: <%= theme.mermaid.startOnload %>,
        theme: "<%= theme.mermaid.theme %>"
    });</script>
<% } %>

<%# Google Adsense %>
<%if(theme.google_adsense.enabled){%>
    <%if(theme.google_adsense.auto_ad){%>
        <script data-ad-client="ca-<%= theme.google_adsense.pub_id %>" async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <%}else{%>
        <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <%}%>
<%}%>
